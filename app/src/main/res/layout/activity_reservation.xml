<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation">

    <Button
        android:id="@+id/bookDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="26"
        android:layout_column="0"
        android:layout_weight="1"
        android:text="Book"
        android:onClick="book"/>

    <EditText
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="date"
        android:text="insert date here" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="28"
        android:layout_column="0"
        android:text="return"
        android:onClick="returnHome"/>

    <EditText
        android:id="@+id/hostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="24"
        android:layout_column="0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/quantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="25"
        android:layout_column="0"
        android:ems="10"
        android:inputType="number"
        android:text="Total of people" />
</GridLayout>